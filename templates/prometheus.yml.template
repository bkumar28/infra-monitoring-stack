global:
  scrape_interval: 5s

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['${ALERTMANAGER_ENDPOINT}:${ALERTMANAGER_PORT}']

rule_files:
  - /etc/prometheus/alert_rules.yml

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['${PROMETHEUS_ENDPOINT}:${PROMETHEUS_PORT}']

  - job_name: 'node-exporter'
    static_configs:
      - targets: ['${NODE_EXPORTER_ENDPOINT}:${NODE_EXPORTER_PORT}']
